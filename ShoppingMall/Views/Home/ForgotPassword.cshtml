@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}



    <div class="container"style="min-height:350px;" >
        <div class="row" style="padding-top:150px; padding-left:50px;">
            <div class="span12" style="text-align:center;">

                <div class="column_3 logo">
                    <h1><span>S</span>hopping Mall</h1>
                </div>



                <span>
                    @if (ViewBag.ErrorMsg != null)
                    {
                        @ViewBag.ErrorMsg;
                    }
                </span>
                <div class="form" style="width: 100%">
                    <div style="height: 25px; width: 160%;">
                    </div>
                    @using (Html.BeginForm("ForgotPassword", "Home"))
                    {
                        @Html.ValidationSummary(true)

                        
                       <input type="text" id="Email" name="Email" required="required" placeholder="Enter Your EmailId" />
                        <div class="sign_btn">
                            <input type="submit" class="btn-sign-in btn-orange" value="Recover Password" />
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>

