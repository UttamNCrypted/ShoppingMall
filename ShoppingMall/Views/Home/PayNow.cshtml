@model  ShoppingMall.Models.PayNow
@{
    ViewBag.Title = "PayNow";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id="mainBody">
    <div class="container">
        <div class="row">
            <div class="span12">
                <table class="table table-bordered">
                    <tr>
                        <th>ShoppingMall Payments </th>
                    </tr>
                    <tr>
                        <td>
                            @using (Html.BeginForm("PayNow", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                            {
@*<form class="form-horizontal" method="post">*@
                                @Html.ValidationSummary(true)
                                <div class="control-group">
                                    <label class="control-label" for="inputCountry">Visa/Credit Card: </label>
                                    <div class="controls">
                                        @*<input type="text" id="txtCardNumber" placeholder="Enter Card Number" required="required">*@
                                        @Html.TextBoxFor(model => model.CardNumber, "", new { @maxlength = 16 })<br />
                                        @Html.ValidationMessageFor(model => model.CardNumber, "", new { @style = "color:red" })
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="inputPost">Expires On: </label>
                                    <div class="controls">
                                        <select name="ExpMonth" id="ExpMonth">
                                            <option selected="selected" value="01">Jan</option>
                                            <option value="02">Feb</option>
                                            <option value="03">Mar</option>
                                            <option value="04">Apr</option>
                                            <option value="05">May</option>
                                            <option value="06">Jun</option>
                                            <option value="07">Jul</option>
                                            <option value="08">Aug</option>
                                            <option value="09">Sep</option>
                                            <option value="10">Oct</option>
                                            <option value="11">Nov</option>
                                            <option value="12">Dec</option>
                                        </select>
                                        <select name="ExpYear" id="ExpYear" style="margin-left: 20px;">
                                            <option selected="selected" value="2015">2015</option>
                                            <option value="2016">2016</option>
                                            <option value="2017">2017</option>
                                            <option value="2018">2018</option>
                                            <option value="2019">2019</option>
                                            <option value="2020">2020</option>
                                            <option value="2021">2021</option>
                                            <option value="2022">2022</option>
                                            <option value="2023">2023</option>
                                            <option value="2024">2024</option>
                                            <option value="2025">2025</option>
                                            <option value="2026">2026</option>
                                            <option value="2027">2027</option>
                                            <option value="2028">2028</option>
                                            <option value="2029">2029</option>
                                            <option value="2030">2030</option>
                                        </select>

                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="inputCountry">CVV: </label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.CVV)<br />
                                        @Html.ValidationMessageFor(model => model.CVV, "", new { @style = "color:red" })
                                    </div>
                                </div>

@*@Html.Partial("UserShippingAddress")*@

                                <div class="control-group">
                                    <div class="controls">
                                        @*<button type="submit" class="btn" style="background-image:url('@Url.Content("~/Content/themes/images/pay-now-button.jpg")')"></button>*@
                                        <button type="submit" class="btn">Pay Now</button>
                                    </div>
                                </div>
@*</form>*@
                            }
                        </td>
                    </tr>
                </table>
                <a href="@Url.Action("Index", "Home")" class="btn btn-large"><i class="icon-arrow-left"></i>Continue Shopping </a>


            </div>
        </div>
    </div>
</div>

